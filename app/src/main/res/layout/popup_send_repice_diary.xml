<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow"
    android:layout_marginBottom="200dp"
    android:layout_marginLeft="@dimen/fifty"
    android:layout_marginRight="@dimen/fifty">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请选择你要发布的内容"
            android:textColor="@color/text_black_normal"
            android:textSize="@dimen/textsize_16"
            android:gravity="center"/>

        <TextView
            android:id="@+id/close_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/text_gray_middle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fifteen"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/diary_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/fifteen"
            android:paddingBottom="@dimen/fifteen">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@mipmap/icon_diary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日记"
                android:textColor="@color/text_black_normal"
                android:textSize="@dimen/textsize_14"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/repice_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/fifteen"
            android:paddingBottom="@dimen/fifteen">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@mipmap/icon_steaming_roast_recipe"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菜谱"
                android:textColor="@color/text_black_normal"
                android:textSize="@dimen/textsize_14"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>