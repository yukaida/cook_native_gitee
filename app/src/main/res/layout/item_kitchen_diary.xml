<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/twenty">

            <TextView
                android:id="@+id/hour_minute_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:30"
                android:textStyle="bold"
                android:textColor="@color/text_black_normal"
                android:textSize="30dp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/month_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十一月"
                android:textSize="@dimen/textsize_12"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_gray_normal"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/food_show_iv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/diary_bg"
            android:layout_marginLeft="@dimen/ten"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/ten">

            <TextView
                android:id="@+id/food_send_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#打卡第九天#"
                android:textColor="@color/text_black_normal"
                android:textSize="@dimen/textsize_16"
                android:maxLines="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_me_line"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/five"/>


        </LinearLayout>

    </LinearLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/gray01"
       android:layout_marginLeft="@dimen/ten"
       android:layout_marginRight="@dimen/ten"/>


</LinearLayout>