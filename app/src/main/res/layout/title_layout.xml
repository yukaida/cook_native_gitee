<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_ll_title_layout"
    android:layout_width="match_parent"
    android:layout_height="80px"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="20px"
    android:paddingTop="6px"
    android:paddingRight="20px"
    android:paddingBottom="6px">

    <ImageView
        android:id="@+id/id_img_title_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_pressed_bg"
        android:clickable="true"
        android:padding="16px"
        android:src="@drawable/finish_normal" />

    <TextView
        android:id="@+id/id_tv_title_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/text_gray"
        android:textSize="35px" />

    <ImageView
        android:id="@+id/id_img_connection"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/selector_pressed_bg"
        android:clickable="true"
        android:padding="5px"
        android:visibility="gone"
        android:src="@drawable/icon_connection" />

    <ImageView
        android:id="@+id/id_img_title_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_pressed_bg"
        android:clickable="true"
        android:padding="5px"
        android:visibility="gone"
        android:src="@drawable/share_icon" />

</com.zhy.autolayout.AutoLinearLayout>