<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.view.mine.ModifyPasswordActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/modify_password_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:title="修改密码"
        app:size_title="@dimen/textsize_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/linearlayout_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="登录账号"
            android:gravity="right"
            android:textColor="@color/text_gray_normal"
            android:textSize="@dimen/textsize_14"/>

        <TextView
            android:id="@+id/login_acount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/text_black_normal"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/linearlayout_bg">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:gravity="right"
            android:textColor="@color/text_gray_normal"
            android:textSize="@dimen/textsize_14"/>

        <TextView
            android:id="@+id/login_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/text_black_normal"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/linearlayout_bg">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:gravity="right"
            android:textColor="@color/text_black_normal"
            android:textSize="@dimen/textsize_14"/>

        <EditText
            android:id="@+id/new_pass_tv"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
            android:gravity="left"
            android:hint="*请输入新密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/text_black_normal"
            android:textSize="@dimen/textsize_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/linearlayout_bg">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:gravity="right"
            android:textColor="@color/text_black_normal"
            android:textSize="@dimen/textsize_14"/>

        <EditText
            style="@style/EditTextStyle"
            android:id="@+id/confirm_pass_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/text_black_normal"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:hint="*请再次输入新密码"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
            android:maxLines="1"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_line"/>

    <Button
        android:id="@+id/btn_modify_commit"
        style="@style/ButtonStyle"
        android:background="@drawable/selector_button_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_120"
        android:layout_marginTop="@dimen/space_80"
        android:layout_marginRight="@dimen/space_120"
        android:text="@string/picture_confirm" />

</LinearLayout>