<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ebanswers.kitchendiary.mvp.view.found.FoundFragment">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_found"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        app:icon_back="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tab_found_tv"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="发现"
                android:textColor="@color/text_black_normal"
                android:textSize="@dimen/textsize_20"
                android:gravity="center"/>


            <TextView
                android:id="@+id/tab_focu_tv"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="关注"
                android:textColor="@color/text_gray_normal"
                android:textSize="@dimen/textsize_16"
                android:gravity="center"
                android:layout_marginLeft="@dimen/ten"/>

        </LinearLayout>

    </com.hjq.bar.TitleBar>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/focu_found_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

